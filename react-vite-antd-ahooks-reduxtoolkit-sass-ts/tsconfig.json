{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "target": "ESNext",
    "sourceMap": true,
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "noImplicitAny": true, // 声明一个没有标注类型的变量, 编译器会会给你一个编译时错误
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "noUnusedLocals": true, // 当typescript发现未使用的局部变量时, 会给出一个编译时错误
    "noUnusedParameters": true, // 和上面的compilerOptions.noUnusedLocals, 不同之处在于局部变量变成了函数参数
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
